<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dip"/>

            <gradient
                android:centerColor="#12b06b"
                android:endColor="#12b06b"
                android:startColor="#12b06b"/>
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="5dip"/>
                <gradient
                    android:centerColor="#80C07AB8"
                    android:endColor="#a0C07AB8"
                    android:startColor="#80C07AB8"/>
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5dip"/>

                <gradient
                    android:centerColor="#f49500"
                    android:endColor="#f49500"
                    android:startColor="#f49500"/>
            </shape>
        </clip>
    </item>

</layer-list>